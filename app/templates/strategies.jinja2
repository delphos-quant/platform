{% extends "layout.jinja2" %}

{% block additional_styles %}
    <link rel="stylesheet" href="{{ url_for('static', filename='styles/strategies.css') }}">
{% endblock %}

{% block content %}

    <div class="container-strategies">

        <!-- Header Section -->
        <header class="strategy-header">
            <h1>Strategies Explorer</h1>
            <p>Deep dive into the quantitative models, adjust parameters, and visualize results on-the-fly.</p>
        </header>

        <!-- Model Selection -->
        <section class="model-selection">
            <h2>Select a Model</h2>
            <label for="modelDropdown"></label><select id="modelDropdown">
            {% for model in models %}
                <option value="{{ model.id }}">{{ model.name }}: {{ model.description }}</option>
            {% endfor %}
        </select>
        </section>
        <p id="selectedModelDisplay">Selected Model: None</p>
        <!-- Hyperparameter Tuning Section -->
        <section class="hyperparameters">
            <h2>Hyperparameter Tuning</h2>
            <div class="param-group">
                <label for="param1">Learning Rate: {{ hyperparameters.learning_rate }}</label>
                <input type="range" min="0.001" max="1" step="0.001" id="param1"
                       value="{{ hyperparameters.learning_rate }}">
            </div>
            <!-- Extend with more hyperparameters as needed -->
            <button class="btn-tune">Tune Model</button>
        </section>

        <!-- Dataset Sample Preview -->
        <section class="data-preview">
            <h2>Dataset Sample</h2>
            <table>
                <thead>
                <tr>
                    {% for header in dataset_headers %}
                        <th>{{ header }}</th>
                    {% endfor %}
                </tr>
                </thead>
                <tbody>
                {% for row in dataset_sample %}
                    <tr>
                        {% for item in row %}
                            <td>{{ item }}</td>
                        {% endfor %}
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </section>

        <!-- Results and Dataframe Visualization -->
        <section class="results-section">
            <h2>Results</h2>
            <table>
                <!-- Example format assuming results come in as a list of dictionaries -->
                <thead>
                <tr>
                    {% for header in results_headers %}
                        <th>{{ header }}</th>
                    {% endfor %}
                </tr>
                </thead>
                <tbody>
                {% for result in results %}
                    <tr>
                        {% for key, value in result.items() %}
                            <td>{{ value }}</td>
                        {% endfor %}
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </section>

        <!-- Interactive Plot Section -->
        <!-- Note: Placeholder for now. You'd integrate with a real plotting library. -->
        <section class="interactive-plots">
            <h2>Visualizations</h2>
            <div class="plot-container">
                <iframe src="/dashapp/" width="100%" height="500"></iframe>
                <!-- If embedding multiple Dash apps:
                <iframe src="/dashapp2/" width="100%" height="500"></iframe>
                <iframe src="/dashapp3/" width="100%" height="500"></iframe>
                ... and so on ...
                -->
            </div>
        </section>

        <!-- Model Insights/Logs Section -->
        <section class="model-insights">
            <h2>Model Insights</h2>
            <label for="modelLogs"></label><textarea readonly id="modelLogs" rows="10">{{ model_insights }}</textarea>
        </section>

        <!-- Footer or Additional Info -->
        <footer class="strategy-footer">
            <p>For further assistance or inquiries, contact our team <a href="/contact">here</a>.</p>
        </footer>

    </div>
{% endblock %}
{% block additional_scripts %}
<script>
    document.getElementById('modelDropdown').addEventListener('change', function() {
        var selectedModelId = this.value;

        $.ajax({
            url: '/get-learning-rate',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify({ "model_id": selectedModelId }),
            dataType: 'json',
            success: function(response) {
                document.getElementById('learningRateDisplay').innerText = "Learning Rate: " + response.learning_rate;
            },
            error: function(response) {
                console.error("Error fetching learning rate:", response);
            }
        });
    });
</script>
{% endblock %}
